      <div class="col-md-4"></div>
        <div class="col-md-4">
          <div class="form">
            <h2>Signup to Makers BnB</h2>
              <form class="" action="/users/new" method="POST">
                <input id="email-address" type="email" name="email" value="" placeholder="Enter email" required><br>
                <input id="password" type="password" name="password" value="" placeholder="Password"><br>
                <input class="btn btn-sucess" type="submit" id='signup' value="signup"><br>
              </form>
                <%= message %>

              <style media="screen">
                .form {
                  border: 1px solid grey;
                  border-radius: 10px;
                  text-align: center;
                  background-color: #D7EDF5;
                  padding: 10px;
                }
              </style>
            </div>
          </div>
        <div class="col-md-4"></div>
      </div>
    </body>
  </html>
